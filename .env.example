# =============================================================================
# CONFIGURAÇÕES DO STACK DE OBSERVABILIDADE
# =============================================================================
# Copie este arquivo para .env e ajuste as variáveis conforme necessário

# =============================================================================
# GRAFANA
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_PORT=3000
GRAFANA_DOMAIN=localhost

# =============================================================================
# PROMETHEUS
# =============================================================================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=10GB
PROMETHEUS_EXTERNAL_URL=http://localhost:9090

# =============================================================================
# ALERTMANAGER
# =============================================================================
ALERTMANAGER_PORT=9093
ALERTMANAGER_EXTERNAL_URL=http://localhost:9093

# Configurações de Email
SMTP_SMARTHOST=localhost:587
SMTP_FROM=alertmanager@yourdomain.com
SMTP_AUTH_USERNAME=alertmanager@yourdomain.com
SMTP_AUTH_PASSWORD=your-email-password

# Destinatários de Email
ALERT_EMAIL_ADMIN=admin@yourdomain.com
ALERT_EMAIL_OPS=ops@yourdomain.com
ALERT_EMAIL_INFRA=infrastructure@yourdomain.com
ALERT_EMAIL_MONITORING=monitoring@yourdomain.com

# Slack (opcional)
SLACK_API_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL_CRITICAL=#alerts-critical
SLACK_CHANNEL_GENERAL=#alerts

# =============================================================================
# EXPORTERS
# =============================================================================
NODE_EXPORTER_PORT=9100
CADVISOR_PORT=8080
SNMP_EXPORTER_PORT=9116
WINDOWS_EXPORTER_PORT=9182

# =============================================================================
# SNMP CONFIGURATION
# =============================================================================
SNMP_COMMUNITY=public

# IPs dos Dispositivos SNMP (separados por vírgula)
# Switches
SNMP_SWITCHES_IPS=192.168.1.10,192.168.1.11

# APs Unifi
SNMP_UNIFI_APS_IPS=192.168.1.20,192.168.1.21

# pfSense
SNMP_PFSENSE_IP=192.168.1.1

# Windows Servers (quando necessário)
WINDOWS_SERVERS_IPS=192.168.1.100:9182,192.168.1.101:9182

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
DOCKER_NETWORK_NAME=monitoring

# =============================================================================
# TIMEZONE
# =============================================================================
TZ=America/Sao_Paulo

# =============================================================================
# LOG LEVELS
# =============================================================================
PROMETHEUS_LOG_LEVEL=info
GRAFANA_LOG_LEVEL=info
ALERTMANAGER_LOG_LEVEL=info
SNMP_EXPORTER_LOG_LEVEL=info

# =============================================================================
# SECURITY
# =============================================================================
# Desabilitar funcionalidades desnecessárias
GRAFANA_ANALYTICS_REPORTING=false
GRAFANA_CHECK_FOR_UPDATES=false
GRAFANA_DISABLE_GRAVATAR=true

# =============================================================================
# VOLUMES (paths no host)
# =============================================================================
PROMETHEUS_DATA_PATH=./prometheus_data
GRAFANA_DATA_PATH=./grafana_data
ALERTMANAGER_DATA_PATH=./alertmanager_data

# =============================================================================
# CONFIGURAÇÕES AVANÇADAS
# =============================================================================
# Limites de recursos (opcional)
PROMETHEUS_MEMORY_LIMIT=2g
GRAFANA_MEMORY_LIMIT=512m
ALERTMANAGER_MEMORY_LIMIT=256m

# Configurações de scrape
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_EVALUATION_INTERVAL=15s

# Configurações de alerta
ALERT_GROUP_WAIT=10s
ALERT_GROUP_INTERVAL=10s
ALERT_REPEAT_INTERVAL=1h