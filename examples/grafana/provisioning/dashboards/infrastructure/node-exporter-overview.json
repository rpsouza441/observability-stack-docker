        "showHeader": true,
        "sortBy": [
          {
            "desc": true,
            "displayName": "Usage %"
          }
        ]
      },
      "pluginVersion": "9.0.0",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "((node_filesystem_size_bytes{instance=~\"$instance\",fstype!~\"tmpfs|fuse.lxcfs|squashfs\"} - node_filesystem_avail_bytes{instance=~\"$instance\",fstype!~\"tmpfs|fuse.lxcfs|squashfs\"}) / node_filesystem_size_bytes{instance=~\"$instance\",fstype!~\"tmpfs|fuse.lxcfs|squashfs\"}) * 100",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "title": "Disk Usage by Filesystem",
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "device": false,
              "fstype": false,
              "instance": true,
              "job": true,
              "mountpoint": false
            },
            "indexByName": {
              "Value": 2,
              "device": 1,
              "mountpoint": 0
            },
            "renameByName": {
              "Value": "Usage %",
              "device": "Device",
              "mountpoint": "Filesystem"
            }
          }
        }
      ],
      "type": "table"
    }
